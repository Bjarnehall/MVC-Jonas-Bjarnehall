{% extends 'base.html.twig' %}

{% block title %}Lägg till en bok
{% endblock %}

{% block body %}
<div class="presentationbooks">
	<h3>Skriv in uppgifter och lägg till en bild när du laddar upp en ny bok.</h3><br>

<form method="post" action="{{ path('library_create') }}" enctype="multipart/form-data">
	<input type="text" name="title" placeholder="Titel">
	<input type="text" name="isbn" placeholder="ISBN">
	<input type="text" name="author" placeholder="Författare">
	<textarea name="description" placeholder="Beskrivning"></textarea>
	<input type="file" name="image">
	<button type="submit">Submit</button>
</form>
<div class="spaceblock"></div>

</div>
<script>
	document.body.style.backgroundImage = "url( {{ asset('img/biliotek.jpg') }})";
</script>

{% endblock %}

