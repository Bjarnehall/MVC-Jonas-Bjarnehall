{% extends 'base.html.twig' %}

{% block body %}

<div class="presentationbooks">
	<h1>Våra böcker</h1>
	<div class="books">
		{% for book in books %}
			<div class="book">
				<h2>{{ book.title }}</h2>
				<p>Author:
					{{ book.author }}</p>
				<div class="book-details">
					{% if book.imgBase64 %}
						<img src="data:image/jpeg;base64,{{ book.imgBase64 }}" alt="Book Image" style="width: 200px; float: left; margin-right: 20px;">
					{% else %}
						<p>No img for book</p>
					{% endif %}
					<p>{{ book.description }}</p>
				</div>
				<p>ISBN:
					{{ book.isbn }}</p>
			</div>
		{% endfor %}
	</div>
</div>
<div class="spaceblock">
</div>

{% endblock %}

