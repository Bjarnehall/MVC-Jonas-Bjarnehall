{% extends 'base.html.twig' %}

{% block body %}

	<div class="presentationbooks">
<h2>
	<a href="{{ path('show_library') }}">Tillbaka</a><br>
</h2>

		<div class="book">
			<h2>{{ book.title }}</h2>
			<p>Author:
				{{ book.author }}</p>
			<div class="book-details">
				{% if book.imgBase64 %}
					<img src="data:image/jpeg;base64,{{ book.imgBase64 }}" alt="Book Image" style="width: 200px; float: left; margin-right: 20px;">
				{% else %}
					<p>No image for this book</p>
				{% endif %}
				<p>{{ book.description }}</p>
			</div>
			<p>ISBN:
				{{ book.isbn }}</p>
                <a href="{{ path('update_book', {'id': book.id}) }}">Update this book</a>
		</div>
	</div>
	<div class="spaceblock"></div>

{% endblock %}
