{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
<div class="presentation">
<h2>Session</h2>
<a href="{{ path('session_destroy') }}" title="Destroy Session">
    <h1><i class="fas fa-trash"></i></h1>
</a>


{% if sessionVariables is empty %}
    <p>No session variables found.</p>
{% else %}
    <ul>
        {% for key, value in sessionVariables %}
            <li><strong>{{ key }}:</strong> {{ value|json_encode }}</li>
        {% endfor %}
    </ul>
{% endif %}


{% for message in app.flashes('notice') %}
    <div class="flash-notice">{{ message }}</div>
{% endfor %}
</div>
{% endblock %}
